{
	"compilerOptions": {
		"module": "None",
		"moduleResolution": "Node",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"target": "es2021",
		"noImplicitAny": false,
		"disableSizeLimit": true,
		"strictBindCallApply": true
	},
	"include": [
		"js/**/*.js",
		"src/**/*.js",
		"devTools/types/**/*.d.ts",
		"devTools/scripts/**/*.js"
	],
	"exclude": [
		"src/001-lib/Jquery/**",
		"src/001-lib/mousetrap/**",
		"src/001-lib/webgl/**",
		"src/art/webgl.js",
		"src/js/displayVariables.js"
	]
}
